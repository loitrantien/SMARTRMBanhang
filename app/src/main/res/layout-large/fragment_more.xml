<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.normal.more.MoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:paddingTop="@dimen/space_normal"
                android:paddingRight="@dimen/space_huge"
                android:paddingLeft="@dimen/space_normal"
                android:paddingBottom="@dimen/space_normal"
                android:layout_height="@dimen/view_size_120dp">
                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="@dimen/view_size_80dp"
                    android:layout_height="@dimen/view_size_80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/default_avatar"
                    android:layout_marginLeft="@dimen/space_normal"
                    />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginStart="@dimen/space_normal"
                    android:text="Trần Tiến Lợi"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_huge"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tvUserEmail"
                    app:layout_constraintLeft_toRightOf="@id/ivUserAvatar"
                    app:layout_constraintTop_toTopOf="@id/ivUserAvatar" />
                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tranloi247@gmail.com"
                    android:textSize="@dimen/font_large"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    app:layout_constraintLeft_toRightOf="@id/ivUserAvatar"
                    app:layout_constraintBottom_toBottomOf="@id/ivUserAvatar"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginStart="@dimen/space_normal"
                    />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/menu"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/bill_manage"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/about"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/settings"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/share"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/feedback"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_large"
                android:text="@string/logout"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>

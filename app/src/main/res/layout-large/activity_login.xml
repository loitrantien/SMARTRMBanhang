<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dnu.loi.smartrm.ui.login.LoginActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vCheckLarge"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blur_login_by_passcode"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_normal"
                android:background="@android:color/transparent"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_50"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_normal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvConnectOnline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_connect"
                        android:gravity="center"
                        android:padding="@dimen/space_normal"
                        android:text="Dành cho nhân viên bán hàng"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_huge"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.dnu.loi.smartrm.custom.EditTextClearAble
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"
                    android:background="@drawable/bg_white_radius_3dp"
                    android:padding="@dimen/space_tiny"
                    app:hint="@string/domain_online"
                    app:leftDrawable="@drawable/ic_server_address" />

                <com.dnu.loi.smartrm.custom.EditTextClearAble
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"                    android:background="@drawable/bg_white_radius_3dp"
                    android:padding="@dimen/space_tiny"
                    app:hint="@string/user_name"
                    app:leftDrawable="@drawable/ic_person_1" />

                <com.dnu.loi.smartrm.custom.EditTextClearAble
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"                    android:background="@drawable/bg_white_radius_3dp"
                    android:padding="@dimen/space_tiny"
                    app:hint="@string/password"
                    app:leftDrawable="@drawable/ic_password" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginLeft="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/login"
                    android:gravity="center"
                    android:padding="@dimen/space_normal"
                    android:id="@+id/btnLogin"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

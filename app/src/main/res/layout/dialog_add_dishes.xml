<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.dnu.loi.smartrm.ui.adddishes.AddDishesDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="@dimen/space_normal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/view_size_40dp"
            android:layout_height="@dimen/view_size_40dp"
            android:background="@drawable/sl_tran_blue"
            android:padding="@dimen/space_small"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/title_add_dishes"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_small"
        android:background="@drawable/bg_bottom_blue_line"
        android:gravity="center_vertical"
        android:padding="@dimen/space_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món *"
            android:textColor="#696868"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etDishesName"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_size_30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:hint="Nhập tên món" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_small"
        android:background="@drawable/bg_bottom_blue_line"
        android:gravity="center_vertical"
        android:padding="@dimen/space_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá bán *"
            android:textColor="#696868"

            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etDishesPrice"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_size_30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="right|center_vertical"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_small"
        android:layout_marginBottom="@dimen/view_size_40dp"
        android:background="@drawable/bg_bottom_blue_line"
        android:gravity="center_vertical"
        android:padding="@dimen/space_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loại *"
            android:textColor="#696868"
            android:textSize="@dimen/font_normal" />

        <LinearLayout
            android:id="@+id/llDishesType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDishesType"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_size_30dp"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:text="Bát"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_small"
                android:src="@drawable/ic_action_expand_right_gray" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_margin="@dimen/space_small"
        android:background="@drawable/bg_btn_main"
        android:gravity="center"
        android:text="@string/save"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_large" />
</LinearLayout>

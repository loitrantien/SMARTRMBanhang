<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.dnu.loi.smartrm.ui.order.OrderFragment">



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrderManage"
        android:text="Danh sách order"
        android:ellipsize="end"
        android:textSize="@dimen/font_normal"
        android:padding="@dimen/space_large"
        android:textColor="@color/colorPrimary"
        android:maxLines="1"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@drawable/bg_bottom_blue_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvOrder"
        android:gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrder"
        android:text="Chi tiết order"
        android:textAllCaps="true"
        android:ellipsize="end"
        android:background="@drawable/bg_bottom_blue_line"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/tvOrderManage"
        app:layout_constraintLeft_toRightOf="@id/tvOrderManage"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_normal"
        android:padding="@dimen/space_large"
        android:maxLines="1"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/frOrderContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOrderManage" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddOrder"
        android:layout_width="@dimen/view_size_50dp"
        android:layout_height="@dimen/view_size_50dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_add_white"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>

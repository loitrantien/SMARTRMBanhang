<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llContainer"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/space_small"
    android:paddingBottom="@dimen/space_small"
    android:background="@drawable/bg_border_bottom_gray"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/view_size_40dp"
        android:layout_height="@dimen/view_size_40dp"
        android:id="@+id/ivCheckBox"
        android:src="@drawable/ic_checkbox_selected"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_large"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_small"
        android:text="sssssss"
        />
</LinearLayout>